<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fsu.hack.app.hackfsu.MainActivity">

    <Button
        android:text="Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/recordButton" />

    <Button
        android:text="Get New ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enrollButton"
        android:layout_below="@+id/recordButton"
        android:layout_alignLeft="@+id/recordButton"
        android:layout_alignStart="@+id/recordButton" />

    <Button
        android:text="Verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verifyButton"
        android:layout_below="@+id/enrollButton"
        android:layout_alignLeft="@+id/enrollButton"
        android:layout_alignStart="@+id/enrollButton" />

    <Button
        android:text="Recognize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verifyButton"
        android:layout_alignLeft="@+id/verifyButton"
        android:layout_alignStart="@+id/verifyButton"
        android:id="@+id/recognizeButton" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recognizeButton"
        android:layout_alignRight="@+id/recognizeButton"
        android:layout_alignEnd="@+id/recognizeButton"
        android:id="@+id/resetButton" />

</RelativeLayout>
